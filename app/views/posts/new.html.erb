<h2>Create a Post</h2>


<form class="" action="<%= posts_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label> Title
    <input type="text" name="post[title]" value="">
  </label>

  <label> Url
    <input type="text" name="post[url]" value="">
  </label>

  <label> Content
    <input type="text" name="post[content]" value="">
  </label>

  <b>Select Subs</b>
  <input type="hidden" name="post[sub_id]" value="">
  <% Sub.all.each do |sub| %>
    <label> <%= sub.title%>
      <input type="checkbox"
       name="post[sub_id]"
      value="<%= sub.id %>">
    </label>
    <% end %>

  <input type="submit" value="Create Post!">
</form>
